{
  "name": "containerization-assist-mcp",
  "version": "1.0.2",
  "description": "TypeScript MCP server for AI-powered containerization workflows with Docker and Kubernetes support",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist-cjs/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./server": {
      "types": "./dist/src/mcp/mcp-server.d.ts",
      "import": "./dist/src/mcp/mcp-server.js",
      "require": "./dist-cjs/src/mcp/mcp-server.js",
      "default": "./dist/src/mcp/mcp-server.js"
    },
    "./tools": {
      "types": "./dist/src/tools/index.d.ts",
      "import": "./dist/src/tools/index.js",
      "require": "./dist-cjs/src/tools/index.js",
      "default": "./dist/src/tools/index.js"
    },
    "./types": {
      "types": "./dist/src/types/index.d.ts",
      "import": "./dist/src/types/index.js",
      "require": "./dist-cjs/src/types/index.js",
      "default": "./dist/src/types/index.js"
    },
    "./config": {
      "types": "./dist/src/config/index.d.ts",
      "import": "./dist/src/config/index.js",
      "require": "./dist-cjs/src/config/index.js",
      "default": "./dist/src/config/index.js"
    },
    "./sdk": {
      "types": "./dist/src/sdk/index.d.ts",
      "import": "./dist/src/sdk/index.js",
      "require": "./dist-cjs/src/sdk/index.js",
      "default": "./dist/src/sdk/index.js"
    },
    "./sdk/types": {
      "types": "./dist/src/sdk/types.d.ts",
      "import": "./dist/src/sdk/types.js",
      "require": "./dist-cjs/src/sdk/types.js",
      "default": "./dist/src/sdk/types.js"
    }
  },
  "bin": {
    "containerization-assist-mcp": "./dist/src/cli/cli.js",
    "ca-mcp": "./dist/src/cli/cli.js"
  },
  "files": [
    "dist/**/*",
    "dist-cjs/**/*",
    "policies/**/*.rego",
    "!policies/**/*_test.rego",
    "policies/compiled/*.wasm",
    "policies.user.examples/**/*.rego",
    "!policies.user.examples/**/*_test.rego",
    "policies.user.examples/**/*.md",
    "!policies.user/**",
    "knowledge/packs/**/*.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "rm -rf dist dist-cjs coverage .tsbuildinfo*",
    "build": "npm run clean && npm run build:policies && npm run build:esm && npm run build:cjs",
    "build:policies": "tsx scripts/build-policies.ts",
    "build:esm": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json --resolve-full-paths && chmod +x dist/src/cli/cli.js",
    "build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json && printf '{\"type\": \"commonjs\"}\\n' > dist-cjs/package.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "build:verify": "tsx scripts/verify-build.ts",
    "dev": "tsx watch src/cli/cli.ts",
    "start": "node dist/src/cli/cli.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects unit integration e2e",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects unit --runInBand",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects unit integration e2e --coverage",
    "test:llm": "NODE_OPTIONS='--experimental-vm-modules' jest --selectProjects llm-integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "validate-api": "tsx scripts/validate-public-api.ts",
    "validate:policies": "tsx scripts/validate-policies.ts",
    "policy:simulate": "tsx src/cli/policy-simulate.ts",
    "validate": "npm run lint && npm run typecheck && npm run test:unit && npm run validate:policies && node scripts/validate-examples.js",
    "fix": "npm run lint:fix && npm run format",
    "quality:gates": "tsx scripts/quality-gates.ts",
    "prepack": "node scripts/prepare-cjs-package.cjs",
    "postpack": "node scripts/restore-package.cjs",
    "prepublishOnly": "npm run validate && npm run build",
    "mcp:inspect": "npx @modelcontextprotocol/inspector ./scripts/mcp-start.sh start",
    "mcp:local": "tsx scripts/toggle-mcp-mode.ts local",
    "mcp:packaged": "tsx scripts/toggle-mcp-mode.ts packaged",
    "mcp:status": "tsx scripts/toggle-mcp-mode.ts status",
    "smoke:journey": "tsx scripts/smoke-journey.ts",
    "test:policies": "opa test policies/"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@kubernetes-models/apimachinery": "^2.2.0",
    "@kubernetes/client-node": "^1.4.0",
    "@modelcontextprotocol/sdk": "~1.24.1",
    "@open-policy-agent/opa-wasm": "^1.10.0",
    "@types/xml2js": "^0.4.14",
    "commander": "^14.0.1",
    "docker-file-parser": "^1.0.7",
    "dockerfilelint": "^1.8.0",
    "dockerode": "^4.0.9",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.0",
    "kubernetes-models": "^4.5.1",
    "pino": "^9.14.0",
    "tmp": "^0.2.5",
    "validate-dockerfile": "^1.8.1",
    "xml2js": "^0.6.2",
    "yaml": "^2.8.1",
    "zod": "^3.25.6",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@ai-sdk/azure": "^2.0.54",
    "@eslint/js": "^9.38.0",
    "@jest/globals": "^30.2.0",
    "@types/dockerode": "^3.3.44",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/tar": "^6.1.13",
    "@types/tar-fs": "^2.0.4",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "ai": "^5.0.76",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tar": "^7.5.2",
    "ts-jest": "^29.4.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "containerization",
    "docker",
    "kubernetes",
    "ai-assisted",
    "devops",
    "java",
    "spring-boot",
    "maven",
    "gradle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/azure/containerization-assist"
  },
  "bugs": {
    "url": "https://github.com/azure/containerization-assist/issues"
  },
  "homepage": "https://github.com/azure/containerization-assist#readme"
}
